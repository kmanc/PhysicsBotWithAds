            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/velocity"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_below="@+id/missingxlabel"
            android:layout_toLeftOf="@+id/xmiasolvevo"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/xmiasolvevo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/initialvelocity"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/xmiasolvev"
            android:layout_toLeftOf="@+id/anchor"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/xmiasolvet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/deltat"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/xmiasolvev"
            android:layout_toRightOf="@+id/anchor"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/xmiasolvea"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/acceleration"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/xmiasolvev"
            android:layout_toRightOf="@+id/xmiasolvet"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/amiasolvev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/velocity"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
