            android:text="@string/position"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/vomiasolvea"
            android:layout_toRightOf="@+id/vomiasolvexo"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/vomiasolvea"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/acceleration"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/vomiasolvev"
            android:layout_toRightOf="@+id/vomiasolvex"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/tmiasolvev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/velocity"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_below="@+id/missingtlabel"
            android:layout_toLeftOf="@+id/vmiasolvet"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/tmiasolvevo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/initialvelocity"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/tmiasolvev"
            android:layout_toLeftOf="@+id/vmiasolvexo"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/tmiasolvexo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/initialposition"
            android:textAllCaps="false"
            android:background="@drawable/circlebutton"
            android:layout_alignTop="@+id/tmiasolvevo"
            android:layout_centerHorizontal="true"/>

