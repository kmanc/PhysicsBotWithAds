<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#303030"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:id="@+id/relativelayoutvmia">

        <TextView
            android:text="@string/kinematicsinput"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:layout_height="75dp"/>

        <EditText
            android:id="@+id/firstvariable"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_below="@+id/title"
            android:layout_marginTop="25dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:inputType="phone"
            android:digits="0123456789-."
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/secondvariable"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_below="@+id/firstvariable"
            android:layout_marginTop="25dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:inputType="phone"
            android:digits="0123456789-."
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/thirdvariable"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_below="@+id/secondvariable"
            android:layout_marginTop="25dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:inputType="phone"
            android:digits="0123456789-."
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/fourthvariable"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_below="@+id/thirdvariable"
            android:layout_marginTop="25dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:inputType="phone"
            android:digits="0123456789-."
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/solve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solve"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/fourthvariable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/solve"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

</ScrollView>
