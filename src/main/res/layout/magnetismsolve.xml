<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#303030"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:id="@+id/relativelayout">

        <TextView
            android:text="@string/solution"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:layout_height="75dp"/>

        <TextView
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/maganswer"
            android:layout_below="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/secondmaganswer"
            android:layout_below="@+id/maganswer"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>

        <ToggleButton
            android:id="@+id/showMore1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textOn="@string/hideWork"
            android:textOff="@string/showWork"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/secondmaganswer"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/workshown"
            android:layout_below="@+id/showMore1"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Another"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/workshown"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:background="@drawable/buttonshapeandcolor"
            android:layout_below="@+id/Another"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5775817630213182/2443357957">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</ScrollView>