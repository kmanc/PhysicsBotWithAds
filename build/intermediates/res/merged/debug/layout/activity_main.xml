<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#303030"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativelayout">

    <TextView
        android:text="@string/welcome"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:id="@+id/title"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/instructions"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:id="@+id/instructions"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/Mechanics"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:text="@string/mechlabel"
        android:background="@drawable/buttonshapeandcolor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/instructions"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Kinematics"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:text="@string/kinlabel"
        android:background="@drawable/buttonshapeandcolor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Mechanics"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Electricity"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:text="@string/eleclabel"
        android:background="@drawable/buttonshapeandcolor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Kinematics"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Magnetism"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:text="@string/maglebel"
        android:background="@drawable/buttonshapeandcolor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Electricity"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Directions"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magnetism"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonshapeandcolor"
        android:text="@string/directions" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Directions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonshapeandcolor"
        android:text="@string/exit" />




    </RelativeLayout>
</ScrollView>
